<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attendeeCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#FFC903"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/attendeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="Name"
            android:textColor="#333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attendeeID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/quicksand_medium"
            android:text="#DSC7781"
            android:textColor="#333"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/attendeeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attendeeName"
            android:fontFamily="@font/quicksand_medium"
            android:text="dsc@google.com"
            android:textColor="#333"
            android:textSize="16dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>